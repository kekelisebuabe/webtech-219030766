      <div class="container" style="padding-top: 5px;">
      <!-- <h3 style="color: dark;">Employee List</h3> -->
        <ul class="list-group" style="width: 100%; margin: left;">
          <% employees.forEach((employee)=> { %>
          <li class="list-group-item">
      
          <img src="<%= employee.img %>" class="rounded float-left mr-3" alt="missing image" style="width: 110px;">
          <div class="">
            
              <h5 class="media-body"><strong>Name:</strong> <%= employee.name%> </h5>
              <p class="card-text"><strong>Position:</strong> <%= employee.position%> </p>
              <p class="card-text"><strong>ID:</strong> <%= employee.employeeID%> </p>
              <p class="card-text"><strong>About:</strong> <%= employee.about%> </p>
              
              <!-- <a href="/employees/ " class="btn btn-dark btn-sm">more info...</a> -->
      
           </div>
      
          </li>
                 <%}) %> 
            </ul> 
            <form action="/todolist" method="POST">
              <div class="form-row" style="padding-top: 5px;">
                <div class="col">
                  <input name="name" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="col">
                  <input name:"ID" type="text" class="form-control" placeholder="ID">
                </div>
                <div class="col">
                  <button type="submit" class="btn btn-primary" style="text-align: right;">Reques Todo List</button>
                </div>
              </div>
            </form>


